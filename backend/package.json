{
    "name": "@monorepo/backend",
    "type": "module",
    "version": "1.0.0",
    "private": true,
    "license": "MIT",
    "module": "src/index.ts",
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "start": "bun src/index.ts",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "npm run lint --fix",
        "test": "cross-env NODE_ENV=test vitest",
        "build": "tsc && tsc-alias",
        "format": "prettier --write .",
        "db:reset": "tsx scripts/reset-db.ts",
        "db:clear": "tsx scripts/clear-db.ts",
        "generate:pg": "drizzle-kit generate --config drizzle.config.ts",
        "generate": "bun run generate:pg",
        "push": "drizzle-kit push",
        "migrate": "drizzle-kit migrate",
        "seed": " bun --bun run scripts/seed.ts ",
        "studio": "drizzle-kit studio --config drizzle.config.ts"
    },
    "dependencies": {
        "@bnk/kv-store": "^1.0.1",
        "@elysiajs/eden": "^1.3.2",
        "@thanhhoajs/websocket": "^1.0.9",
        "@types/rclone.js": "^0.6.3",
        "http-status-codes": "^2.3.0",
        "jose": "^6.0.12",
        "jose-simple": "^1.3.1",
        "nanoid": "^5.1.5",
        "pg": "^8.16.3",
        "@hono/node-server": "^1.14.3",
        "@hono/zod-openapi": "^0.19.8",
        "@libsql/client": "^0.15.8",
        "@scalar/hono-api-reference": "^0.9.2",
        "dotenv": "^17.0.1",
        "dotenv-expand": "^12.0.2",
        "drizzle-orm": "^0.39.0",
        "drizzle-zod": "^0.5.1",
        "hono": "^4.7.11",
        "hono-pino": "^0.9.1",
        "pino": "^9.7.0",
        "pino-pretty": "^13.0.0",
        "stoker": "1.4.3",
        "zod": "^3.25.51"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^4.13.3",
        "@ngneat/falso": "^8.0.2",
        "@types/bun": "latest",
        "@types/node": "^24.1.0",
        "bun-types": "^1.2.19",
        "cross-env": "^7.0.3",
        "drizzle-kit": "^0.31.4",
        "eslint": "^9.28.0",
        "eslint-plugin-format": "^1.0.1",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3",
        "vitest": "^3.2.1"
    }
}
